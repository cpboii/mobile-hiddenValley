<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/afterLogin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:background="#99141414">
        <Switch
            android:gravity="right"
            android:textSize="20dp"
            android:padding="3dp"
            android:id="@+id/learning_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/switches"
            android:fontFamily="casual"
            android:textColor="#EDBB99"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"
                android:layout_marginBottom="-20dp">

            <ImageView
                android:id="@+id/current_profile"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/profilepic1"
                android:layout_marginTop="-10dp"
                android:layout_marginLeft="10dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/welcome"
                            android:fontFamily="fantasy"
                            android:textSize="20dp"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/welcome"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"/>

                        <TextView
                            android:id="@+id/afterUsername"
                            android:layout_width="200dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="10dp"

                            android:layout_weight="1"
                            android:fontFamily="fantasy"
                            android:textColor="#FFFFFF"
                            android:includeFontPadding="true"
                            android:text="aaa"
                            android:textAlignment="center"
                            android:textSize="16dp" />
                    </LinearLayout>



        </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:orientation="vertical"
                    android:layout_marginTop="50dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/letterIMG"
                        android:layout_width="120dp"
                        android:layout_height="120dp"

                        android:layout_weight="1"
                        android:src="@drawable/speeling_logo" />

                    <ImageView
                        android:id="@+id/matchIMG"
                        android:layout_width="120dp"
                        android:layout_height="120dp"

                        android:layout_weight="1"
                        android:src="@drawable/find_the_pair" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    >
                    <ImageView
                        android:id="@+id/calculateIMG"
                        android:layout_width="120dp"
                        android:layout_height="120dp"

                        android:layout_weight="1"
                        android:src="@drawable/num_logo" />
                    <ImageView
                        android:id="@+id/numberIMG"
                        android:layout_width="120dp"
                        android:layout_height="120dp"

                        android:layout_weight="1"
                        android:src="@drawable/example" />
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>
</RelativeLayout>
